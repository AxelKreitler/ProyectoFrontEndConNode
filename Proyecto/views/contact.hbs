<body class="background1">
    <div class="container-fluid" style="min-height:85vh">
        <div class="row">
            <div class="col-xl-4 col-lg-3 col-md-2 col-sm-1"></div>
            
            <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-xs-12">

            {{#if correcto}}
                <form class="form-container2">
                    <h1>{{correcto}}</h1>
                </form>
            {{else}}
                <form class="form-container2" action="/contact" method="post">
                    <div class="form-group">
                        <div class="Acceso1">
                            <h1>Contacto</h1>
                            <p>Por favor siga los siguientes pasos para recibir ayuda personalizada.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="mail" name="mail" aria-describedby="emailHelp" placeholder="Email" required>
                        <small id="emailHelp" class="form-text text-muted">No compartiremos tu cuenta de email con nadie.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Asunto</label>
                        <input type="text" class="form-control" id="asunto" name="asunto" placeholder="Asunto" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescripcion1">Descripcion</label>
                        <textarea class="form-control" id="mensaje" name="mensaje" rows="5" placeholder="Mensaje" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Enviar</button>
                    </div>
                </form>
            {{/if}}
            </div>
            <div class="col-xl-4 col-lg-3 col-md-2 col-sm-1"></div>
        </div>
    </div>
</body>